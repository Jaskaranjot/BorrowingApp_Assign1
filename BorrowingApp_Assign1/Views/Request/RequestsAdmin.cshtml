@model IEnumerable<BorrowingApp_Assign1.Models.Request>

<div class="container mt-5">
    <h1 class="text-center mb-4">Requests Listing (Admin)</h1>

    <table class="table table-hover table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Equipment Type</th>
                <th scope="col">Name</th>
                <th scope="col">Role</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.Equipment</td>
                    <td>@request.Name</td>
                    <td>@request.Role</td>
                    <td>
                        <button class="btn btn-success btn-sm mr-2">Accept</button>
                        <button class="btn btn-danger btn-sm">Deny</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
